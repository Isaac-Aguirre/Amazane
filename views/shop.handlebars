<link href="https://fonts.googleapis.com/css?family=Chakra+Petch|Dosis|Inconsolata|Roboto+Mono&display=swap" rel="stylesheet">
<div class="row">
<div class="col s12 m12">
<img src="https://i.pinimg.com/originals/52/5e/3f/525e3f5562891662ca1105fddcce4575.png" style="height: 150px; width: 100%">
</div>
<div class="col s12 m3">

</div>
<div class="col s12 m9">
    {{#each items}}
    <div class="col s10 offset-s1 m6 l3 item">
        <div class="card small" style="background: url('{{picture}}'); background-size: 100%; background-position: center top 10px; background-repeat: no-repeat; background-">
            <div class="card-action">
                <span><i class="material-icons activator right">more_vert</i></span>
                <span class="card-title activator grey-text text-darken-4 truncate">{{name}}</span>
            </div>
            <div class="card-reveal" style="opacity: 0.9">
                <span class="card-title"><i class="material-icons right">close</i></span>
                <p style="font-size: 20px;">{{name}}</p>
                <p style="font-weight: bold;">${{price}}</p>
                <a class="waves-effect waves-light btn"><i class="material-icons right">add</i>Add to Cart</a>
            </div>
        </div>
    </div>
    {{/each}}
    <a class="waves-effect waves-light btn load-database"><i class="material-icons right">add</i>Load Database</a>
</div>
</div>

